<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Google Font API -->
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
</head>

<body>
    <header>
        <div class="header">
            <div class="container">
                <div id="logo">
                    <img src="~/Images/rapidkl.png" height="30" />
                </div>

                <nav id="normalview">
                    <ul>
                        @{
                            if (ViewBag.Title == "User Record")
                            {
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li style="color: #ec2633">User Report & Record</li>
                                <li>@Html.ActionLink("e-Ticket Report & Record", "Report", "Ticket")</li>
                                <li>@Html.ActionLink("Payment Report & Record", "Report", "Payment")</li>
                            }

                            else if (ViewBag.Title == "e-Ticket Record")
                            {
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("User Report & Record", "Report", "User")</li>
                                <li style="color: #ec2633">e-Ticket Report & Record</li>
                                <li>@Html.ActionLink("Payment Report & Record", "Report", "Payment")</li>
                            }

                            else if (ViewBag.Title == "Payment Record")
                            {
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("User Report & Record", "Report", "User")</li>
                                <li>@Html.ActionLink("e-Ticket Report & Record", "Report", "Ticket")</li>
                                <li style="color: #ec2633">Payment Report & Record</li>
                            }

                            else
                            {
                                <li style="color: #ec2633">Home</li>
                                <li>@Html.ActionLink("User Report & Record", "Report", "User")</li>
                                <li>@Html.ActionLink("e-Ticket Report & Record", "Report", "Ticket")</li>
                                <li>@Html.ActionLink("Payment Report & Record", "Report", "Payment")</li>
                            }
                        }
                    </ul>
                </nav>

                <div id="user">
                    Admin
                    <a href="@Url.Action("Logout", "Home")">
                        <img src="~/Images/logout.png" width="25" style="padding-left:25px;" />
                    </a>
                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div style="width: 100%; height: 66px; background-color: #265BA9; left: 0; padding:0; margin:0;">
        <center>
            <table style="width: 90%; height: 66px;">
                <tr>
                    <td style="vertical-align: middle; color: #eeeeee; font-size: 11pt;">
                        This application is developed by Siti Sarah and Afiq Izzuddin using ASP.NET MVC
                    </td>
                    <td style="vertical-align: middle; text-align: right; color: #eeeeee; font-size: 11pt;">
                        ISB42603 Advanced Programming
                    </td>
                </tr>
            </table>
        </center>
    </div>
</body>
</html>

